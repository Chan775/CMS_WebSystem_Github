                @Html.DisplayFor(model => model.Cust_Id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Cust_Name, htmlAttributes: new { @class = "control-label col-md-2", style = "text-align:left;" })
            <div class="col-md-5">
                @Html.DisplayFor(model => model.Cust_Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Cust_Contact, htmlAttributes: new { @class = "control-label col-md-2", style = "text-align:left;" })
            <div class="col-md-5">
                @Html.DisplayFor(model => model.Cust_Contact, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Cust_EmailAddress, htmlAttributes: new { @class = "control-label col-md-2", style = "text-align:left;" })
            <div class="col-md-3">
                @Html.DisplayFor(model => model.Cust_EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Cust_Address, htmlAttributes: new { @class = "control-label col-md-2", style = "text-align:left;" })
            <div class="col-md-4">
                @Html.DisplayFor(model => model.Cust_Address, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Edit |", "Edit", new { id = Model.Cust_Id, @class = "btn btn-primary btn-large" })
                @Html.ActionLink(" Back to List", "CustomerManagement", new { @class = "btn btn-primary btn-large" })
