@model CMS_WebSystem.Models.Customer_tbl

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer Details</h2>

<div>
    <hr />
    <div class="form-horizontal" style="margin-left:20px;">
